#include<stdio.h>
#include<conio.h>
#include<string.h>
void password(char *ar,int max)
{
	char ch;
	int x=0;
	while(1)
	{
		ch=getch();
		if(ch==13)
		{
			ar[x]='\0';
			break;
		}
		if(ch==8 && x!=0)
		{
			printf("\b \b");
			if(x<=max && x>0)
			x--;
		}
		else
		if(x<max && ch!=8)
		{
			cprintf("*");
			ar[x]=ch;
			x++;
		}
	}
}
void main()
{
	int n1,n2;
	char u[20],ps[20],u1[]="suzaku",ps1[]="kururugi";
	textcolor(GREEN);
	gotoxy(10,50);
	clrscr();
	printf("\n\tEnter Username : ");
	gets(u);
	printf("\tEnter Password : ");
	password(ps,20);
	printf("\n\n\tUsername: %s",u);
	printf("\n\tPassword: %s",ps);
	n1=strcmp(u,u1);
	n2=strcmp(ps,ps1);
	if(n1==0 && n2==0)
		printf("\n\tPermission Granted");
	else
		printf("\n\tPermission Denied");
	getch();
}
