#include<stdio.h>
#include<conio.h>
float order()
{
	int ch,n,n1;
	float amt,tamt=0;
	clrscr();
	while(1)
	{
		printf("\nWhat would you to eat?");
		printf("\nFood-Items \t Price");
		printf("\n1. French Fries\t 40  \n2. Chicken Burger\t 60  \n3. Paneer Burger\t 50");
		scanf("%d",&ch);
		switch(ch)
		{
			case 1:printf("\nHow many plates would you like to have?");
					scanf("%d",&n);
					printf("\nChoice Succefully Added!");
					amt=40*n;
					break;
			case 2:printf("\nHow many plates would you like to have?");
					scanf("%d",&n);
					printf("\nChoice Succefully Added!");
					amt=60*n;
					break;
			case 3:printf("\nHow many plates would you like to have?");
					scanf("%d",&n);
					printf("\nChoice Succefully Added!");
					amt=50*n;
					break;
			default:printf("\nInvalid Option");
		}
	printf("\nPress 1 to Continue and 2 to Checkout");
	scanf("%d",&n1);
	if(n1==2)
		break;
	tamt=tamt+amt;
	}
	return (tamt);
}

void main()
{
	int n,c1;
	float tamt1;
	clrscr();
	printf("\nWhat would you like to do?");
	printf("\n1.Eat-Over-Here  2.Take Away");
	scanf("%d",&c1);
	if(c1==1 || c1==2)
		tamt1=order();
	switch(c1)
	{
		case 1:printf("Your total bill: %f",tamt1+50.0);
				printf("\nPlease pay the amount and collect your order from the next counter! Thank You!");
				break;
		case 2:printf("Your total bill: %f",tamt1);
				printf("\nPlease pay the amount and collect your order from the next counter! Thank You!");
				break;
		default:printf("\nPlease,Choose a valid option");
	}
}
		
		
	
	
}
