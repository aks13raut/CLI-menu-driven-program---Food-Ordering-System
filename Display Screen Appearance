#include<stdio.h>
#include<conio.h>
void order()
{
	int ch,n,n1;
	float amt,tamt=0;
	clrscr();
	while(1)
	{
		printf("\nFood-Items \t\t\t Price");
		printf("\n1. French Fries\t\t\t 40  \n2. Chicken Burger\t\t 60  \n3. Paneer Burger\t\t 50  \n4. Checkout\n5. Exit");
		printf("\nWhat would you like to do?\n");
		scanf("%d",&ch);
		if(ch==4 || ch==5)
			break;
		switch(ch)
		{
			case 1:printf("\nHow many plates would you like to have?\n");
					scanf("%d",&n);
					printf("\nChoice Succefully Added!");
					amt=40*n;
					break;
			case 2:printf("\nHow many plates would you like to have?\n");
					scanf("%d",&n);
					printf("\nChoice Succesfully Added!");
					amt=60*n;
					break;
			case 3:printf("\nHow many plates would you like to have?\n");
					scanf("%d",&n);
					printf("\nChoice Succesfully Added!");
					amt=50*n;
					break;
			default:printf("\nInvalid Option");
		}
		printf("\nPlease press 1 to continue: ");
		scanf("%d",&n1);
		if(n1==1)
			clrscr();
	tamt=tamt+amt;
	}

	if(tamt!=0)
	{
		printf("Your total bill: %f",tamt);
		printf("\nPlease pay the amount and collect your order from the next counter! Thank You!");
	}
	else
		printf("\nYou didn't buy anything! Do Visit Again!");
	getch();
}
void main()
{
	int n,c1;
	float tamt1;
	textcolor(GREEN);
	clrscr();
	printf("\n1.Eat-Over-Here  2.Take Away");
	printf("\nWhat would you like to do?:\n");
	scanf("%d",&c1);
	if(c1==1 || c1==2)
		order();
}


